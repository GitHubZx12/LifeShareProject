<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 记录详情 -->
    <include 
        android:id="@+id/include"
        layout="@layout/common_header"/>
    <!-- 图片 -->
    <ImageView 
        android:id="@+id/iv_record_details_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_launcher"/>
    <!-- 标题 -->
    <TextView 
        android:id="@+id/tv_record_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:layout_marginBottom="@dimen/common_margin_10dp"
        android:text="hahahahaah"/>
     <TextView 
        android:id="@+id/tv_record_details_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_10dp"
        android:text="相当不错"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
          <ImageView 
        android:id="@+id/iv_record_details_face_pic"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:src="@drawable/defult_avator"/>
    <TextView 
        android:id="@+id/tv_record_details_face_name"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="zx"/>
     </LinearLayout>
     <Button 
        android:id="@+id/btn_record_details_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/common_margin_10dp"
        android:hint="请发表评论"/>
     
    

</LinearLayout>
