<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical" >

    <!-- 材料 -->

    <LinearLayout
        android:id="@+id/ll_fragment_material"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/et_material_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入材料名称"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/et_material_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入材料用量"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/iv_material_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll_fragment_material"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/crafter_clear_text_bt" />

</RelativeLayout>