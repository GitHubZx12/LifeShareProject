<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bark_gray"
    android:orientation="vertical" >

    <include 
        android:id="@+id/include"
        layout="@layout/common_header"/>
    <!-- 記錄名稱 -->

    <EditText
        android:id="@+id/et_uprecord_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="请填写记录名称"
        android:gravity="left"
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:minLines="3" />

    <!-- 用於現實的pic -->

    <ImageView
        android:id="@+id/iv_uprecord_show_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" 
        android:background="@color/white"
        android:minHeight="200dp"
        android:layout_marginTop="@dimen/common_margin_10dp"/>

    <!-- 記錄心得體會 -->
    <EditText
        android:id="@+id/et_uprecord_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left"
        android:layout_marginTop="@dimen/common_margin_10dp"
        android:hint="说说你的新的体会。。"
        android:minLines="5" />

</LinearLayout>