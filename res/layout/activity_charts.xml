<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7EB288"
        android:gravity="center_vertical">
         <ImageView
            android:id="@+id/iv_charts_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:src="@drawable/crafter_cguide_nextarrow_yes" />

        <TextView
            android:id="@+id/tv_charts_title"
            android:text="最热教程TOP100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_textsize16"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/listview_charts"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    </ListView>
    

</LinearLayout>
