<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7EB288"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_message_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:src="@drawable/crafter_cguide_nextarrow_yes" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="评论" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#b07EB288"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_message_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/message_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="评论 " />

        <RadioButton
            android:id="@+id/rb_message_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/message_selector"
            android:button="@null"
            android:gravity="center"
            android:text="回复"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/rb_message_private_letter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/message_selector"
            android:button="@null"
            android:gravity="center"
            android:text="私信"
            android:textColor="#ffffff" />
    </RadioGroup>
    <!-- content -->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" >
    </android.support.v4.view.ViewPager>

</LinearLayout>