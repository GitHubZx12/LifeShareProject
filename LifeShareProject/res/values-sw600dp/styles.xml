<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="dialog_default" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_green</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_red</item>
    </style>

    <!-- 黑色默认内容 -->
    <style name="textview_default_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 黑色标题 -->
    <style name="textview_title_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 单据内容 -->
    <style name="textview_order_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/order_content</item>
    </style>

    <!-- 单据标题 -->
    <style name="textview_title_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dip</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/order_title</item>
    </style>

    <!-- 单据输入框字体 -->
    <style name="edittext_order_content">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/order_edit</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dip</item>
    </style>

    <!-- 单据不可编辑输入框字体 -->
    <style name="edittext_uneditale_order_content">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dip</item>
    </style>

    <!-- Tab页标题 -->
    <style name="tab_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 下拉框 -->
    <style name="spinner_content">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/order_edit</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/spinnerbox</item>
    </style>
    <!-- 列表后面的删除、停用、启用按钮 -->
    <style name="delete_disable_btn">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">70dip</item>
        <item name="android:layout_height">37dip</item>
    </style>

</resources>