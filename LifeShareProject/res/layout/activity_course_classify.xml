<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<!-- 侧滑菜单分类 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7EB288"
        android:gravity="center_vertical">
         <ImageView
            android:id="@+id/iv_classify_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:src="@drawable/crafter_cguide_nextarrow_yes" />

        <TextView
            android:id="@+id/tv_course_classify_title"
            android:text="教程分类"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_textsize16"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ExpandableListView 
        android:id="@+id/expand_lv_course_classify"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ExpandableListView>
     <FrameLayout
        android:id="@+id/fl_course_classify_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </FrameLayout>
    </FrameLayout>
    
</LinearLayout>
