<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.camelot.parkinglots.RegisterActivity" >

    <!-- 头部 -->

    <include
        android:id="@+id/lay_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/common_header" />

    <!-- 线 -->

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lay_head"
        android:layout_marginTop="20dp"
        android:background="@color/line" />
    <!-- 手机号 -->

    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line"
        android:background="@color/login_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:hint="用户名"
            android:paddingLeft="20dp"
            android:textColorHint="@color/pwd_text_hint"
            android:textSize="16sp" />

        <com.mendale.app.utils.ClearEditText
            android:id="@+id/register_et_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:hint="请输入用户名"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_username" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/line" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_yzm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line2"
        android:visibility="gone"
        android:background="@color/login_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:hint="@string/yzm"
            android:paddingLeft="20dp"
            android:textColorHint="@color/pwd_text_hint"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/register_et_yzm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/input_yzm"
                android:inputType="textPassword"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />

            <Button
                android:id="@+id/register_btn_yzm"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_verification"
                android:text="@string/get_yzm"
                android:textColor="#20c0da"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 线 -->

    <FrameLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_below="@+id/ll_yzm" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/line" />
    </FrameLayout>

    <!-- 密码=设置登录密码 -->

    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line3"
        android:background="@color/login_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:hint="@string/pwd"
            android:paddingLeft="20dp"
            android:textColorHint="@color/pwd_text_hint"
            android:textSize="16sp" />

        <com.mendale.app.utils.ClearEditText
            android:id="@+id/register_et_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:ems="10"
            android:hint="@string/pwd"
            android:inputType="textPassword"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_password"
        android:background="@color/line" />

    <Button
        android:id="@+id/register_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_selector"
        android:clickable="false"
        android:text="@string/confrim_register"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>