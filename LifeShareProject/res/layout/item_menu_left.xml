<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_meun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7EB288"
    android:orientation="vertical" >

    <!-- 侧滑菜单 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="2" >

        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/no_login_pic" />

        <TextView
            android:id="@+id/tv_menu_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="登录/注册"
            android:textColor="#ffffff"
            android:paddingTop="5dp"
            android:layout_below="@+id/iv_menu_icon"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_menu_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_menu_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:src="@drawable/crafter_setting_menu" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_menu_help"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="求教程"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_menu_upload"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="上传教程"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_menu_classify"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分类"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_menu_search"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_menu_news"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消息"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_menurecommond"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="应用推荐"
            android:textColor="#ffffff" />
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>